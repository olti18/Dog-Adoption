
@model IEnumerable<Adoption.Models.WishList>

@{
    ViewData["Title"] = "My Wishlist";
}

<h1>@ViewData["Title"]</h1>


@if (Model == null || !Model.Any())
{
    <p>Your wishlist is empty.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Dog Name</th>
                    <th>Color</th>
                    <th>Age</th>
                    <th>Quantity</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Dog.Name</td>
                        <td>@item.Dog.Color</td>
                        <td>@item.Dog.Age</td>
                        <td>@item.Quantity</td>
                        <td>
                            <a asp-action="DeleteFromWishlist" asp-route-dogId="@item.DogId" class="btn btn-danger btn-sm">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
