@model IEnumerable<Adoption.Models.AdoptionRequest>

<h2>Adoption Requests</h2>

<table class="table">
    <thead>
        <tr>
            <th>Request ID</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.Id</td>
                <td>@request.FullName</td>
                <td>@request.Email</td>
                <td>@request.Address</td>
                <td>@request.Phone</td>
                <td>@request.Status</td>
                <td>
                    @if (request.Status == "Pending")
                    {
                        <a asp-controller="AdoptionRequest" asp-action="Approve" asp-route-id="@request.Id" class="btn btn-success">Approve</a>
                        <a asp-controller="AdoptionRequest" asp-action="Deny" asp-route-id="@request.Id" class="btn btn-danger">Deny</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>




